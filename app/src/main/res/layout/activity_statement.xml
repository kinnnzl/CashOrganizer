<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".StatementActivity">

    <include
        android:id="@+id/customToolbar"
        layout="@layout/default_with_back_toolbar">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_height="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="ตัั้งแต่วันที่:"
                    android:textColor="@color/black"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="0.7"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:backgroundTint="@color/gray"
                    android:text="เลือกวันที่เริ่มต้น"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:layout_marginEnd="52dp"
                android:layout_height="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="ถึงวันที่:"
                    android:textColor="@color/black"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="0.7"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:backgroundTint="@color/gray"
                    android:text="เลือกวันที่สิ้นสุด"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSearchStatement"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/yellow_light"
                android:text="ยืนยัน"
                android:textColor="@color/black"
                app:cornerRadius="8dp" />

        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewPlanMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:contentDescription="NULL"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/table_statement_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/table_heading_stetement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        style="@style/table_header"
                        android:background="@drawable/layout_border_table"
                        android:text="ว/ด/ป"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="รายการ"
                        style="@style/table_header"
                        android:paddingEnd="5dp"
                        android:textAlignment="center"
                        android:background="@drawable/layout_border_table"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:text="รายรับ"
                        style="@style/table_header"
                        android:paddingEnd="5dp"
                        android:textAlignment="center"
                        android:background="@drawable/layout_border_table"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:text="ค่าใช้จ่าย"
                        style="@style/table_header"
                        android:paddingEnd="5dp"
                        android:textAlignment="center"
                        android:background="@drawable/layout_border_table"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:text="คงเหลือ"
                        style="@style/table_header"
                        android:paddingEnd="5dp"
                        android:textAlignment="center"
                        android:background="@drawable/layout_border_table"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:text="ประเภท"
                        style="@style/table_header"
                        android:paddingEnd="5dp"
                        android:textAlignment="center"
                        android:background="@drawable/layout_border_table"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"/>

                </TableRow>

            </TableLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/table_statement_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="รวมรายรับ">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/valueSummaryIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/green"
                        android:text="10,000.00">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="รวมค่าใช้จ่าย">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/valueSummaryExpenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/red"
                        android:text="5,000.00">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="คงเหลือ">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/valueSummaryBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="5,000.00">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>