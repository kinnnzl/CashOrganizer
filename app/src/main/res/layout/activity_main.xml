<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <include
            android:id="@+id/customToolbar"
            layout="@layout/custom_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPeriod"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="@color/gray"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/txtPeriod"
                    style="@style/TextAppearance.MaterialComponents.Headline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เลือกช่วงเวลาที่ต้องการบันทึก"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCashbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="8dp"
            app:strokeColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardPeriod">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="20dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icCashBox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cashbox_statement"
                    android:tint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                </androidx.appcompat.widget.AppCompatImageView>

                <TextView
                    android:id="@+id/txtCashBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Cashbox"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/icCashBox"
                    app:layout_constraintTop_toTopOf="@+id/icCashBox">

                </TextView>

                <TextView
                    android:id="@+id/valueCashBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/txtCashBox"
                    app:layout_constraintTop_toBottomOf="@+id/txtCashBox">

                </TextView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icDragAndDrop"
                    android:layout_width="32dp"
                    android:layout_height="29dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_drag_and_drop"
                    android:tint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtCashBox"
                    app:layout_constraintVertical_bias="0.0">

                </androidx.appcompat.widget.AppCompatImageView>

                <TextView
                    android:id="@+id/txtDescDragAndDrop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="กดค้างและลาก\nเพื่อจัดสรร"
                    android:textAlignment="center"
                    android:textSize="8sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/icDragAndDrop"
                    app:layout_constraintStart_toStartOf="@+id/icDragAndDrop"
                    app:layout_constraintTop_toBottomOf="@+id/icDragAndDrop"
                    app:layout_constraintVertical_bias="0.0">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnAddCashBox"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_add_circle_"
            android:background="@color/white"
            android:tint="@color/black"
            android:translationX="-7dp"
            android:translationY="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardCashbox"
            app:layout_constraintEnd_toEndOf="parent">

        </androidx.appcompat.widget.AppCompatImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>