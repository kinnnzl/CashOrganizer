<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/table_heading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_border_table"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/column_date"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:paddingEnd="5dp"
                android:background="@drawable/layout_border_table"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/column_category"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:paddingEnd="5dp"
                android:background="@drawable/layout_border_table"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/column_income"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:paddingEnd="5dp"
                android:background="@drawable/layout_border_table"
                android:baselineAligned="false"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/column_expenses"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:paddingEnd="5dp"
                android:background="@drawable/layout_border_table"
                android:baselineAligned="false"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/column_balance"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:paddingEnd="5dp"
                android:background="@drawable/layout_border_table"
                android:baselineAligned="false"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/column_income_type"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:paddingEnd="5dp"
                android:background="@drawable/layout_border_table"
                android:baselineAligned="false"
                android:textAlignment="center" />
        </TableRow>
    </TableLayout>

</LinearLayout>